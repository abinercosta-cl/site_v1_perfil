---

import avatarImage from "../assets/avatar.png"
import fundo from "../assets/fundo.jpg"

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<title>Abiner Costa</title>
	</head>
	<div id="classForm" class="flex md:flex w-auto h-screen justify-center items-center flex-col z-20">
		<div id="fundoImagem" class="w-screen z-1 bg-cover bg-center flex md:flex" style={`background-image: url(${fundo.src})`}>
			<img src={fundo.src} id="imagemdefundo" class="h-full z-0" alt="">
		  </div>
		<div id="avatar" class=" mb-16 items-center justify-center w-auto h-40 flex md:flex flex-col z-0">
			<img id="avatarImage" class="w-40 h-40" src={avatarImage.src} alt="">
			<p>@abinercosta-cl</p>
		</div>
		<div id="social" class="flex w-auto h-72 items-center justify-around flex-col space-y-4">
			<div class="bg-slate-700 w-[540px] h-[56px] flex flex-col justify-center items-center rounded-lg">
				<button class="text-white">Instagram</button>
			  </div>
		  <div class="bg-slate-700 w-[540px] h-[56px] flex flex-col justify-center items-center rounded-lg">
			<button class="text-white">GitHub</button>
		  </div>
		  <div class="bg-slate-600 w-[540px] h-[56px] flex flex-col justify-center items-center rounded-lg">
			<button class="text-white ">LinkedIn</button>
		  </div>
		</div>
	  </div>
	  
		
</html>